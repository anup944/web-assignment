<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project.title %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', { page: '' }) %>

  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 min-h-[200px] my-8">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold"><%= project.title %></h1>
          <p class="py-6">
            Below, you will find detailed information about the project: <%= project.title %>.
          </p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="card bg-base-100 shadow-xl">
        <figure class="px-4 pt-4">
          <img
            src="<%= project.feature_img_url %>"
            alt="<%= project.title %>"
            class="rounded-xl h-64 w-full object-cover"
          />
        </figure>
      </div>

      <div class="card bg-base-100 shadow-xl p-6">
        <h2 class="text-2xl font-bold mb-4">Introduction</h2>
        <p class="mb-6"><%= project.intro_short %></p>

        <h2 class="text-2xl font-bold mb-4">Impact</h2>
        <p class="mb-6"><%= project.impact %></p>

        <div class="mb-6">
          <a
            href="<%= project.original_source_url %>"
            target="_blank"
            class="btn btn-primary"
          >
            Learn More
          </a>
        </div>

        <div id="quote" class="p-4 bg-base-200 rounded-lg">
          <p class="text-lg italic">Loading quote...</p>
        </div>
      </div>
    </div>

    <div class="mt-8 text-center">
      <a
        href="#"
        onclick="history.back(); return false;"
        class="btn btn-primary"
      >
        Back to Projects
      </a>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(response => response.json())
        .then(data => {
          document.getElementById("quote").innerHTML = `
            <blockquote class="text-lg italic">
              "${data.quote}"
              <footer class="mt-2 font-bold">- ${data.author}</footer>
            </blockquote>
          `;
        })
        .catch(error => {
          document.getElementById("quote").innerHTML = `
            <p class="text-lg italic">Could not load quote at this time.</p>
          `;
        });
    });
  </script>
</body>
</html>